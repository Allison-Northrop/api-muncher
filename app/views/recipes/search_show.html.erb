<html>
  <head>
    <meta charset="utf-8">
    <title>Gluten Freedom</title>
  </head>
  <body id="home">

    <div class="row" >
      <section class="large-12 columns text-center">
        <h1 class="gf_title">Gluten Freedom</h1>
      </secion>
    </div>

    <div class="row">
    <section class = "large-12 columns text-center">
      <%= form_tag search_path, method: :get do %>
        <section class ="search_bar"><%= text_field_tag :search, nil, placeholder: "Free yourself from the Gluten"%></section>
        <section class ="search_button"><%= submit_tag "search", class: "button" %></section>
      <% end %>
    </section>

  <%= form_tag recipes_path, method: :get do %>
  <%= hidden_field_tag :search, params[:search] %>
  <%= hidden_field_tag :from, (@from.to_i + 10) %>
  <%= submit_tag "Next 10" %>
<% end %>
  </body>
</html>
